@model VirtualTourWeb.Models.Location
@{
    var title = string.Format("{0} Areas", Model.Name);
    ViewBag.Title = title;
}

<div class="row">
    @foreach (var area in Model.Areas)
    {
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <a href="@Url.Action("Area","VT", new { @id = area.Id })">
                <div class="thumbnail">
                    <img src="@area.ImagePath" alt="@area.Name Image" />
                    <div class="caption">
                        <h3>@area.Name</h3>
                        @Html.Raw(area.DescriptionHtml)
                    </div>
                </div>
            </a>
        </div>
    }
</div>